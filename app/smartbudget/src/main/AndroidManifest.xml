<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartbudget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartBudget">

        <!-- Tela que será aberta primeiro -->
        <activity
            android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela das despesas (acessada via botão) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity android:name=".DespesasActivity" android:exported="true"/>
        <activity android:name=".ReceitasActivity" android:exported="true"/>
        <activity android:name=".VoltarActivity" android:exported="true"/>

    </application>
</manifest>
