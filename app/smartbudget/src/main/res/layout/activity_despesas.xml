<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99D6FF">

    <!-- Título -->
    <TextView
        android:id="@+id/tituloDespesas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Despesas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Lista de despesas (Exemplo com RecyclerView ou LinearLayout estático) -->
    <LinearLayout
        android:id="@+id/listaDespesas"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BBDDF6"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tituloDespesas"
        app:layout_constraintBottom_toTopOf="@id/opcoesDespesas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <!-- Item de despesa -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supermercado - R$ 180,00"
            android:textColor="#D10000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>
        <!-- Adicione mais itens... -->
    </LinearLayout>

    <!-- Opções: Adicionar/Excluir -->
    <LinearLayout
        android:id="@+id/opcoesDespesas"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Adicionar despesa"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="– Excluir despesa"
            android:textColor="#000"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>